{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "isolatedModules": true
  },
  "include": ["src/**/*", "pages/**/*"],
  "exclude": ["node_modules", "build", "dist"]
}